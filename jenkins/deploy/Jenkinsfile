pipeline {
    agent {
        label 'deployer-slave-amazon-linux'
    }
    
    options {
        timeout(time: 90, unit: 'MINUTES')
        timestamps ()
    }

    stages {
        stage('CDK Deploy'){
            steps{
                dir('cdk'){
                    sh '''
                    npm install;
                    npm run deploy;
                    '''
                }
            }
        }
    }
    post { 
        always {
            cleanWs()
        }
    }
}
